<div class="row">
	<div class="col-lg-12">
		<table class="table table-hover">
			<thead>
				<th>Title</th>
				<th>Length</th>
				<th>Date</th>
				<th>&nbsp;</th>
			</thead>
			<tbody>
				{{#screencasts}}
				<tr data-screencast="{{title}}">
					<td><a href="/screencast/{{id}}">{{title}}</a></td>
					<td class="length">{{duration}}</td>
					<td class="date">{{date}}</td>
					<td><a href="#" class="download">Download</a></td>
				</tr>
				{{/screencasts}}
			</tbody>
		</table>
	</div>
</div>
