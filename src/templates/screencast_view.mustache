<section data-screencast="{{title}}">
	<div class="row">
		<div class="col-lg-12">
			<h2>{{title}}</h2>

			<p class="lead">
			<span class="length">{{duration}}</span> - <span class="date">{{date}}</span>
			</p>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12">
			<div class="embed-responsive embed-responsive-16by9">
				<iframe class="embed-responsive-item preview" src="{{preview}}" allowfullscreen=""></iframe>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12">
			<p class="summary">{{summary}}</p>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12">
			<p><a href="/screencast/{{id}}/download" class="download btn btn-primary">Download</a></p>
		</div>
	</div>
</section>
